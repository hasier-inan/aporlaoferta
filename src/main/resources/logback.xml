<configuration>
    <!--<property name="APOR_LOG_HOME" value="c:/logs" />-->
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <file>/var/lib/openshift/5728d2f70c1e6689fe000082/app-root/logs/aporlaoferta.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                /var/lib/openshift/5728d2f70c1e6689fe000082/app-root/logs/archived/debug.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%d %-5p [%c{1}] %m %n</pattern>
        </encoder>
    </appender>

    <!-- ApplicationRequest Loggers -->
    <logger name="com.aporlaoferta" level="info" additivity="false">
        <appender-ref ref="fileAppender"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.aporlaoferta" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <root level="error">
        <appender-ref ref="fileAppender"/>
    </root>

</configuration>
